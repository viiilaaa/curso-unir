pipeline {
    agent any

    stages {
        stage('Inicial') {
            steps {
                echo 'Iniciando repositorio'
                git 'https://github.com/viiilaaa/curso-unir'
                bat 'dir'
                echo WORKSPACE
            }
        }
        stage('build'){
            steps {
                bat 'echo "building..."'
            }
        }     
        stage('Tests'){
            parallel{
                stage('Unit'){
                    steps {
                        bat '''
                            SET PYTHONPATH=%WORKSPACE%\\Caso_practico1_1
                            "C:\\Program Files\\Python311\\python.exe" -m pytest --junit-xml=result-unit.xml Caso_practico1_1\\test\\unit
                        '''
                    }
                }    
                stage('Service'){
                    steps {
                        bat '''
                            SET FLASK_APP=Caso_practico1_1\\app\\api.py
                            SET FLASK_ENV=development
                            start "" "C:\\Program Files\\Python311\\python.exe" -m flask run
                            start java -jar E:\\Documentos\\wiremock-standalone-3.13.2.jar -port 9090 --root-dir Caso_practico1_1\\test\\wiremock
                            
                            ping 127.0.0.1 -n 3 >nul
                            
                            SET PYTHONPATH=%WORKSPACE%\\Caso_practico1_1
                            "C:\\Program Files\\Python311\\python.exe" -m pytest --junit-xml=result-rest.xml Caso_practico1_1\\test\\rest
                            '''
                    }
                } 
                
            }
        }
        stage('Results'){
            steps {
                junit 'result*.xml'
            }
        }
    }
}
